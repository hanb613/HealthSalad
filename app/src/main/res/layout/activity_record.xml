<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginLeft="160dp"
            android:gravity="center" />
        <Button
            android:id="@+id/date_btn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:backgroundTint="#cccccc"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="30dp"
            android:text="날짜"
            android:onClick="mOnClickDate"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="@drawable/rounded">
        <TextView
            android:id="@+id/input_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음식"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"/>

            <Button
                android:id="@+id/add_food"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:backgroundTint="#cccccc"
                android:text="추가하기"
                android:onClick="mOnClickfood"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:id="@+id/breakfast_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": "
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/breakfast_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="- "
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:id="@+id/lunch_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": "
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lunch_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="- "
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:id="@+id/dinner_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": "
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/dinner_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="- "
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="7dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>

            <Button
                android:id="@+id/add_exercise"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:backgroundTint="#cccccc"
                android:layout_marginLeft="170dp"
                android:text="추가하기"
                android:onClick="mOnClickexercise"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <TextView
                android:id="@+id/exercise_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="- "/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ok_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/circle"
        android:text="확인"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:onClick="mOnClickRecord"/>

</LinearLayout>